@model IEnumerable<FoodDelivery.Models.MenuItem>

@{
    ViewData["Title"] = $"Меню ресторану \"{ViewBag.RestaurantName}\"";
    int restaurantId = ViewBag.RestaurantId; // Зберігаємо ID для використання у посиланнях
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" asp-route-restaurantId="@restaurantId" class="btn btn-primary">Додати нову страву</a>
    <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurantId" class="btn btn-secondary">Назад до деталей ресторану</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Ціна</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>