@model FoodDelivery.Models.MenuItem

@{
    ViewData["Title"] = "Видалити страву";
    int restaurantId = ViewBag.RestaurantId;
}

<h1>Видалення</h1>
<h3 class="text-danger">Ви впевнені, що хочете видалити цю страву?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">Назва</dt>
        <dd class = "col-sm-9">@Model.Name</dd>
        <dt class = "col-sm-3">Ціна</dt>
        <dd class = "col-sm-9">@Model.Price.ToString("C")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Так, видалити" class="btn btn-danger" /> 
        <a asp-action="Index" asp-route-restaurantId="@restaurantId" class="btn btn-secondary">Скасувати</a>
    </form>
</div>