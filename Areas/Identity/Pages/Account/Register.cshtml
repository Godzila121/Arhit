@page
@model RegisterModel
@{
    ViewData["Title"] = "Реєстрація"; // Змінено заголовок
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Створити новий акаунт.</h2> @* Змінено текст *@
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Електронна пошта</label> @* Змінено текст *@
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Пароль</label> @* Змінено текст *@
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Підтвердіть пароль</label> @* Змінено текст *@
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Input.IsRestaurantOwner" class="form-check-input" type="checkbox" />
                @* Текст для лейбла буде автоматично взято з [Display] атрибута моделі *@
                <label asp-for="Input.IsRestaurantOwner" class="form-check-label"></label>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зареєструватися</button> @* Змінено текст *@
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Використати інший сервіс для реєстрації.</h3> @* Змінено текст *@
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                           Зовнішні служби автентифікації не налаштовано. Дивіться <a href="https://go.microsoft.com/fwlink/?LinkID=532715">цю статтю</a>
                           про налаштування цієї програми ASP.NET для підтримки входу через зовнішні служби. @* Змінено текст *@
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Увійти за допомогою вашого @provider.DisplayName акаунта">@provider.DisplayName</button> @* Змінено текст *@
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}