@model IEnumerable<FoodDelivery.Models.MenuItem>

@{
    ViewData["Title"] = $"Меню ресторану {ViewBag.RestaurantName}"; // Використовуємо ViewBag
    // Отримуємо ID ресторану з ViewBag для посилання "Створити"
    var restaurantId = ViewBag.RestaurantId;
}

<h1>@ViewData["Title"]</h1>

<p>
    @* --- ЗМІНЕНО ТУТ: Додано параметр asp-route-restaurantId --- *@
    <a asp-action="Create" asp-route-restaurantId="@restaurantId" class="btn btn-primary">Створити нову страву</a>
    @* -------------------------------------------------------- *@
    <a asp-action="Index" asp-controller="Dashboard" asp-area="Admin" class="btn btn-secondary">Повернутись до панелі</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            @* Колонка Ресторан може бути не потрібна, якщо ми вже на сторінці меню конкретного ресторану *@
            @* <th>@Html.DisplayNameFor(model => model.Restaurant)</th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>
            @* <td>@Html.DisplayFor(modelItem => item.Restaurant.Name)</td> *@ @* Прибрали вивід ресторану *@
            <td>
                 @* Передаємо ID страви для редагування/видалення *@
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a> |
                @* Можна додати Details, якщо потрібно *@
                @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>