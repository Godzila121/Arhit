@using FoodDelivery.Models
@model IEnumerable<Restaurant>
@{
ViewBag.Title = "Головна";
}
<div class="container my-5">
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1">Найкраща їжа у вашому місті</h1>
            <p class="lead">Швидка доставка з улюблених ресторанів прямо до вашого порогу. Замовляйте зараз та насолоджуйтесь!</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                <a href="@Url.Action("Index", "Restaurant")" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold">Переглянути ресторани</a>
                <a href="/Identity/Account/Register" class="btn btn-outline-secondary btn-lg px-4">Зареєструватися</a>
            </div>
        </div>
        <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
            <img class="rounded-lg-3" src="https://images.unsplash.com/photo-1594179047519-f347310d3322" alt="Смачна їжа" width="720">
        </div>
    </div>
</div>