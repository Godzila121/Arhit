@model FoodDelivery.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Ваш кошик";
}

<h1>Ваш кошик</h1>

@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Ціна</th>
                <th>Кількість</th>
                <th>Всього</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    <td>
                        <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-menuItemId="@item.MenuItemId" class="btn btn-danger btn-sm">
                            Видалити
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <h3>Загальна сума: @Model.Total.ToString("C")</h3>
<a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Оформити замовлення</a>    </div>
}
else
{
    <p>Ваш кошик порожній.</p>
}