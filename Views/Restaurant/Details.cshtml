@model FoodDelivery.ViewModels.RestaurantDetailsViewModel

@{
ViewData["Title"] = Model.Restaurant.Name;
}

<div class="container mt-4">
<div class="row">
<div class="col-md-8">
<h1>@Model.Restaurant.Name</h1>
<p class="text-muted">@Model.Restaurant.Address | @Model.Restaurant.Phone</p>
<p>@Model.Restaurant.Description</p>
</div>
</div>

<hr />

<h3>Меню</h3>

@if (Model.Restaurant.MenuItems.Any())
{
    <div class="list-group">
        @foreach (var item in Model.Restaurant.MenuItems)
        {
            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1">@item.Name</h5>
                    <p class="mb-1">@item.Description</p>
                    <strong class="text-primary">@item.Price.ToString("C")</strong>
                </div>
                
                @* --- ОСЬ ТУТ ЗМІНИ --- *@
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="menuItemId" value="@item.Id" />
                    <button type="submit" class="btn btn-primary">
                        Додати в кошик
                    </button>
                </form>
                @* -------------------- *@
            </div>
        }
    </div>
}
else
{
    <p>У цього ресторану ще немає меню.</p>
}

@* Тут можна додати розділ для відгуків, як ви планували *@


</div>